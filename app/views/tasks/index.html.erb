<h1>My tasks</h1>
<ul class="list-unstyled">
  <% @tasks.each do |task| %>
    <li>
    <% if task.completed %>
    <i class="fa-solid fa-square-check"></i>
  <% else %>
    <i class="fa-regular fa-square"></i>
  <% end %>
    <%= link_to task.title, task_path(task) %> <%= link_to task_path(task), data: { turbo_method: :delete, turbo_confirm: "Are you sure" } do %><i class="fa-solid fa-trash-can"></i><% end %></li>
  <% end %>
</ul>
<hr>
<%= link_to new_task_path do %>
  <i class="fa-solid fa-plus"></i> Create a new task
<% end %>
